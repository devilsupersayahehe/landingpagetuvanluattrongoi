                                        <Icons.MessageCircle className="w-6 h-6" /> Chat Zalo
                                    </a>
                                </div>
                            </FadeIn>
                        </div>
                    </section>
                </div>
            );
        };

        const container = document.getElementById('root');
        const root = ReactDOM.createRoot(container);
        root.render(<App />);
    </script>
</body>
